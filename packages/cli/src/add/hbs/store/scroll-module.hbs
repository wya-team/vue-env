{{#if isPagingBasic}}
import { initScroll } from '@utils/utils';

const initialState = {
	listInfo: {
		...initScroll
	}
};

const mutations = {
	{{mutationPrefix}}_LIST_GET_SUCCESS(state, { data, param: { page } }) {
		state.listInfo = {
			...state.listInfo,
			...data.page,
			data: [
				...state.listInfo.data,
				...data.list
			]
		};
	},
	{{mutationPrefix}}_LIST_GET_REFRESH(state, { data, param: { page } }) {
		state.listInfo = {
			...state.listInfo,
			...data.page,
			data: [
				...data.list
			]
		};
	},
	{{mutationPrefix}}_LIST_INIT(state, payload) {
		state.listInfo = {
			...initScroll
		};
	},
	{{mutationPrefix}}_ROUTE_CHANGE(state) {
		state.listInfo = {
			...initScroll
		};
	}
};
{{else}}
import { initScroll } from '@utils/utils';

const initialState = {
	listInfo: {
		'1': {
			...initScroll
		},
		'2': {
			...initScroll
		},
		'3': {
			...initScroll
		},
	}
};

const mutations = {
	{{mutationPrefix}}_LIST_GET_SUCCESS(state, { data, param: { type, page } }) {
		state.listInfo = {
			...state.listInfo,
			[type]: {
				...state.listInfo[type],
				...data.page,
				data: [
					...state.listInfo[type].data,
					...data.list
				]
			}
		};
	},
	{{mutationPrefix}}_LIST_GET_REFRESH(state, { data, param: { type, page } }) {
		state.listInfo = {
			...initialState.listInfo,
			[type]: {
				...state.listInfo[type],
				...data.page,
				data: [
					...data.list
				]
			}
		};
	},
	{{mutationPrefix}}_LIST_INIT(state, payload) {
		state.listInfo = {
			...initialState.listInfo
		};
	},
	{{mutationPrefix}}_ROUTE_CHANGE(state) {
		state.listInfo = {
			...initialState.listInfo
		};
	}
};
{{/if}}

export const {{stateName}} = {
	state: { ...initialState },
	mutations,
};